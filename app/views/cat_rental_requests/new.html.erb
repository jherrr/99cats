<form action= <%= cat_rental_requests_url %> method="post">
  <label for="cat_dropdown">Select Cat:</label>
  <select name="cat_rental_request[cat_id]" id="cat_dropdown">
    <% @cats.each do |cat| %>
      <option value= <%= cat.id %>><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <label for="cat_rental_start">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" id="cat_rental_start">
  <br>
  <label for="cat_rental_end">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="cat_rental_end">
  <br>
  <input type="submit" value="Submit Rental Request">
</form>
